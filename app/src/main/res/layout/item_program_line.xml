<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="8dp"
    android:paddingStart="8dp"
    android:paddingRight="8dp"
    android:paddingEnd="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/item_program_line_beforeButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#804080">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/item_program_line_labelCard"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/cardview_dark_background">
        <TextView
            android:id="@+id/item_program_line_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/item_program_line_instructionCard"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#707070">
        <TextView
            android:id="@+id/item_program_line_instruction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CMD"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/item_program_line_operand1Card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/cardview_dark_background">
        <TextView
            android:id="@+id/item_program_line_operand1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/item_program_line_operand2Card"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/cardview_dark_background">
        <TextView
            android:id="@+id/item_program_line_operand2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/item_program_line_afterButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#804080">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>
    </android.support.v7.widget.CardView>

</LinearLayout>