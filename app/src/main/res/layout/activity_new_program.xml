<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:hint="Program name"
        android:layout_toLeftOf="@+id/new_program_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:ems="10"
        android:id="@+id/new_program_nameEdit"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <ListView
        android:layout_below="@id/new_program_nameEdit"
        android:layout_alignParentBottom="true"
        android:id="@+id/new_program_instruction_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_program_save"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/new_program_nameEdit"/>

</RelativeLayout>
