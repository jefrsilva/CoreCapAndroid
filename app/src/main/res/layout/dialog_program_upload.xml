<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/label_program_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program"
        android:layout_alignBaseline="@+id/program_spinner"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/program_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/label_program_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/label_program_address"
        android:layout_below="@id/label_program_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignRight="@id/label_program_name"
        android:layout_alignBaseline="@+id/program_address"/>

    <EditText
        android:layout_below="@id/program_spinner"
        android:layout_toRightOf="@id/label_program_address"
        android:id="@+id/program_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Starting address"
        android:inputType="number"
        android:maxLength="3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <Button
        android:id="@+id/program_upload"
        android:layout_below="@id/program_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Upload"
        android:layout_alignParentRight="true"/>
</RelativeLayout>